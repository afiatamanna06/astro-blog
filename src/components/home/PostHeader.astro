---
    import { Image, Picture } from '@astrojs/image/components';

    import { slugify, formatDate } from "../../utils/utils"

    const { title, date, category, author, image } = Astro.props
---

<header class="flex flex-col items-center mt-14">
    <div class="flex flex-col items-center font-atkinson">
        <small>
            <a href={`/category/${slugify(category)}/`}
                class="px-3 py-1 uppercase rounded-sm text-xs text-white bg-[#3945c6] font-medium font-atkinson">{category}</a>
        </small>
        <h1 class="mt-6 text-center text-4xl font-semibold mb-5">{title}</h1>
        <p class="text-center text-xl mb-6 md:mb-12">by <a href={`/author/${slugify(author)}/`}>{author}</a> â€¢
            {formatDate(date)}</p>
    </div>
    <Image src={image.src} alt={image.alt} width={1200} height={600} class="lg:rounded-lg" format={"avif"} fit="cover" quality={80}
        aspectRatio={"5:2"} />
</header>